<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExpenseTracker.UI.Features.Dashboard"
             x:Class="ExpenseTracker.UI.Features.Dashboard.DashboardView">

  <Grid RowDefinitions="Auto,*" Margin="0,0,12,0">

    <!-- Header -->
    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
      <StackPanel>
        <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold"/>
        <TextBlock Text="Terminal" Classes="muted"/>
      </StackPanel>

      <!-- NeedsReview pill -->
      <Button Grid.Column="1"
              Classes="pill"
              Command="{Binding OpenNeedsReview}"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Padding="16,10"
              IsVisible="{Binding ShowNeedsReview}">
        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
          <Svg Width="18" Height="18"
               Path="/Assets/Icons/circle-alert.svg"
               Stretch="Uniform"/>
          <TextBlock Text="{Binding NeedsReviewCount, StringFormat={}{0} Need Review}"
                     VerticalAlignment="Center"
                     Foreground="White"
                     FontWeight="SemiBold"/>
        </StackPanel>
      </Button>
    </Grid>

    <!-- Terminal -->
    <Border Grid.Row="1"
            Background="#0C0C0C"
            BorderBrush="#1C2A40"
            BorderThickness="1"
            CornerRadius="8"
            ClipToBounds="True"
            Padding="4">
      <local:TerminalControl x:Name="Terminal"/>
    </Border>

  </Grid>
</UserControl>
